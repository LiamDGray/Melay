<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <tech.mattico.melay.view.widget.MelayTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/setup_title"
        app:textColor="primary"
        app:textSize="toolbar" />

    <tech.mattico.melay.view.widget.MelayTextView
        style="@style/TextSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/setup_summary" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <tech.mattico.melay.view.widget.MelayTextView
            android:id="@+id/skip"
            style="@style/TextSecondary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:gravity="center"
            android:text="@string/setup_skip"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <tech.mattico.melay.view.widget.MelayTextView
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:gravity="center"
            android:text="@string/setup_next"
            android:textAllCaps="true"
            android:textStyle="bold"
            app:textColor="primary"
            app:textSize="secondary" />

    </LinearLayout>

    <tech.mattico.melay.view.widget.Separator
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>